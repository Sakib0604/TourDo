<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".divisions.Details"
    android:id="@+id/detailsLayout">

    <include layout="@layout/content_details" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/placePic"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/placeName"
                android:layout_below="@+id/placePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textDetails"
                android:layout_below="@+id/placeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="বিস্তারিত"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColorHint="#000000"/>
            <TextView
                android:id="@+id/placeDetails"
                android:layout_below="@+id/textDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textPath"
                android:layout_below="@+id/placeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="যেভাবে যাবেন"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColorHint="#000000"/>
            <TextView
                android:id="@+id/placePath"
                android:layout_below="@+id/textPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>


        </RelativeLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>